{{! Loads the browse.js script due to the prevalence of React Select on the page }}

<script defer src="/browse.js"></script>
<nav id="nav-bar">
    <a href="/">Home</a>
    <a id="here" href="/browse">Browse</a>
    <a href="/about">About</a>
    <a href="/games">Games</a>
</nav>

{{#if user}}
<div class="div-logged-in">
    <p class="p-logged-in">You are logged in as <span style="font-weight: bold">{{user}}</span></p>
    <div class="div-logged-anchors">
        <a class="a-logged-in" href="/dashboard">Dashboard</a>
        <a class="a-logged-in" href="/logout">Log Out</a>
    </div>
</div>
{{/if}}

{{! Sorting options, previous/next page buttons}}
<h1 id="h1-sort-images">{{sort}}</h1>
<p id="p-page-number">Page {{page}}</p><br/>
<div id="prev-next-div">
{{#if previous}}
<a class="a-prev-next" href="{{baseUrl}}/{{previous}}">Previous</a>
{{/if}}
<a class="a-prev-next" href="{{baseUrl}}/{{next}}">Next</a>
</div>

{{! These are hidden from the user and used for the sorting widget}}
<p class="hide" id="offSet">{{offset}}</p>
<p class="hide" id="sortedBy">{{sort}}</p>
<p class="hide" id="units">{{units}}</p>
<p id="p-sorted">Sorted by {{sort}}</p>

